<% if current_user.company.shopify_active? %>
  <% data = [
    {
      name: 'Amazon Sales', stack: 'stack1', data: KPI.revenue(interval: "day"), thousands: ","
    },
    {
      name: 'Shopify Sales', stack: 'stack1', data: KPI.shopify_revenue(interval: "day"), thousands: ","
    }
  ]
  %>
<% else %>
  <% data = [
    {
      name: 'Amazon Sales', stack: 'stack1', data: KPI.revenue(interval: "day"), thousands: ","
    }
  ]
  %>
<% end %>

<%= column_chart data,
  stacked: true,
  colors: ['#0E6E63', '#00D7C0'],
  library: {
    legend: {
      labels: {
        fontColor: '#FFFFFFCC'
      }
    },
    gridLines: {
      color: '#FFFFFFCC'
    },
    scales: {
      yAxes: [{
        ticks: {
          fontColor: '#FFFFFFCC'
        },
      }],
      xAxes: [{
        ticks: {
          fontColor: '#FFFFFFCC'
        }
      }]
    }
  }
%>
