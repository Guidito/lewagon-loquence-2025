<% data = [
  ["Average order amount", Order.all.average("order_total_cents").round],
  ["Average number of items per order", rder.all.average("items_total")]
] %>

<% case locals[:display_type] %>
<% when "pie_chart" %>
  <%= pie_chart data %>
<% when "column_chart" %>
  <%= column_chart data %>
<% else %>
  <%= pie_chart data %>
<% end %>
                   