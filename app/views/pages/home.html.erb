<div id="homepage" class="w-100 home-banner position-relative" data-controller="navbar">
  <div id="top-nav" class="d-flex">
    <% if user_signed_in? %>
      <%= link_to "Go to Dashboard", report_path(current_user.reports_as_owner.where(name: "Daily report").first), class: "btn btn-light box-highlight-white-hover mr-3" %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-light bg-darkblue50 box-highlight-white-hover mr-3" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "btn btn-outline-light box-highlight-white-hover mr-3" %>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-light box-highlight-white-hover mr-3" %>
    <% end %>
  </div>
  <div class="container d-flex justify-content-between flex-column h-100 text-center">
    <div class="row justify-content-center">
      <h1 class="highlight"><small>Loquence</small></h1>
      <h2 class="my-3 col-12 col-sm-12">Data-driven decision making<br>
      <span class="highlight-white font-weight-bold">made simple.</span>
      </h2>
      <hr class="separator box-highlight">
      <h4 class="my-3 col-12 col-sm-12">Automated live reporting for your online shops.</h4>
      <h3>Spend your time making <span class="highlight">business decisions</span>, not spreadsheets.</h3>
      <%= link_to "Connect your shops for free", reports_path, class: "btn bg-darkblue50 btn-outline-light box-highlight-white btn-home-cta my-5" %>
    </div>
    <div class="supported-platforms">
      <h6 class="highlight-white">Supported platforms</h6>
      <div class="logos mt-3">
        <div class="platform-logo">
          <%= image_tag "logos/amazon.png", alt: "Amazon", style: "margin-top: 7px", class: "mx-5" %>
        </div>
        <div class="platform-logo">
          <%= image_tag "logos/woocommerce.png", alt: "WooCommerce", style: "margin-top: 5px", class: "mx-5" %>
        </div>
        <div class="platform-logo">
          <%= image_tag "logos/shopify.png", alt: "Shopify", class: "mx-5"  %>
        </div>
        <div class="platform-logo">
          <%= image_tag "logos/bigcommerce.png", alt: "BigCommerce", style: "margin-top: -2px", class: "mx-5"  %>
        </div>
      </div>
    </div>
  </div>
</div>
