document.querySelector(`[data-widget-id="<%= @widget.id %>"].grid-item`).remove();
<% if @widget.persisted? %>
  var newWidget = "<%= j render partial: 'widgets/grid_item', locals: { widget: @widget } %>";
  var grid = document.querySelector('.grid-layout');
  document.getElementById('new-widget-blueprint').remove();
  grid.insertAdjacentHTML('afterBegin', newWidget);
<% end %>
eval(grid.getElementsByTagName('script')[0].innerHTML);
