<% partial = "kpis/#{widget.kpi.query}" %>
<% display_type = nil unless display_type %>

<div class="widget">
  <div class="widget-header d-flex justify-content-between">
    <h5><%= widget.name %></h5>
    <i class="fas fa-ellipsis-v"></i>
  </div>

  <div class="ctn-kpi h-100 d-flex align-items-center">
    <%= render partial, locals: { data: KPI.send(widget.kpi.query) } %>
  </div>
</div>

