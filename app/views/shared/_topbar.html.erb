<div id="top-navbar" class="d-flex justify-content-between align-items-center pt-3 px-4" data-controller="navbar">
    <div>



    </div>
    <h1 class="report-title text-center m-0"><%= title.upcase %></h1>
    <div>
      <div class="btn-group">
        <i id="btn-go-fullscreen" class="fas fa-expand btn-icon scale-on-hover highlight-on-hover py-1 px-3 clickable" data-action='click->navbar#goFullscreen'></i>
        <i id="btn-exit-fullscreen" class="fas fa-compress btn-icon scale-on-hover highlight-on-hover py-1 px-3 clickable hidden" data-action='click->navbar#exitFullscreen'></i>
        <button type="button" class="widget-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-bars btn-icon scale-on-hover highlight-on-hover py-1 px-3 clickable"></i>
        </button>
        <div class="dropdown-menu dropdown-menu-right">
          <% if @report %>
            <%= link_to edit_report_path(@report), remote: true do %>
              <div id="menu-item-edit-report" class="d-flex justify-content-between align-items-center">
                <p class="m-0">Edit report</p>
                <%= render 'shared/switch' %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

