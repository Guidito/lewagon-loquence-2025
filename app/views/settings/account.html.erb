<%= render 'settings/layout' do %>
  <div class="row">
    <div class="col-2 border-right">
      <div class="nav flex-column nav-pills pt-4" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <a class="nav-link" id="v-pills-company-tab" data-toggle="pill" href="#v-pills-company" role="tab" aria-controls="v-pills-company" aria-selected="true">Company</a>
        <a class="nav-link" id="v-pills-general-tab" data-toggle="pill" href="#v-pills-general" role="tab" aria-controls="v-pills-general" aria-selected="false">General</a>
        <a class="nav-link" id="v-pills-branding-tab" data-toggle="pill" href="#v-pills-branding" role="tab" aria-controls="v-pills-branding" aria-selected="false">Branding</a>
      </div>
    </div>
    <div class="col-10">
      <div class="tab-content p-4" id="v-pills-tabContent">
        <div class="tab-pane fade show active" id="v-pills-overview" role="tabpanel" aria-labelledby="v-pills-overview-tab">
          <%= render 'settings/account/overview' %>
        </div>
        <div class="tab-pane fade show" id="v-pills-company" role="tabpanel" aria-labelledby="v-pills-overview-tab">
          <%= render 'settings/account/company' %>
        </div>
        <div class="tab-pane fade" id="v-pills-branding" role="tabpanel" aria-labelledby="v-pills-branding-tab">
          <%= render 'settings/account/branding' %>
        </div>
        <div class="tab-pane fade" id="v-pills-general" role="tabpanel" aria-labelledby="v-pills-general-tab">
          <%= render 'settings/account/general' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
