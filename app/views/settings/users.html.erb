<%= render 'settings/layout' do %>
  <div class="row">
    <div class="col-2">
      <div class="nav flex-column nav-pills pt-4" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <a class="nav-link active" id="v-pills-all-users-tab" data-toggle="pill" href="#v-pills-all-users" role="tab" aria-controls="v-pills-all-users" aria-selected="true">All Users</a>
        <a class="nav-link" id="v-pills-teams-tab" data-toggle="pill" href="#v-pills-teams" role="tab" aria-controls="v-pills-teams" aria-selected="false">Teams</a>
        <a class="nav-link" id="v-pills-roles-tab" data-toggle="pill" href="#v-pills-roles" role="tab" aria-controls="v-pills-roles" aria-selected="false">Roles</a>
      </div>
    </div>
    <div class="col-10">
      <div class="tab-content p-4" id="v-pills-tabContent">
        <div class="tab-pane fade show active" id="v-pills-all-users" role="tabpanel" aria-labelledby="v-pills-all-users-tab">
          <%= render 'settings/users/all_users' %>
        </div>
        <div class="tab-pane fade" id="v-pills-teams" role="tabpanel" aria-labelledby="v-pills-teams-tab">
          <%= render 'settings/users/teams' %>
        </div>
        <div class="tab-pane fade" id="v-pills-roles" role="tabpanel" aria-labelledby="v-pills-roles-tab">
          <%= render 'settings/users/roles' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
